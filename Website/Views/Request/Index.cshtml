@model List<Models.Entities.Request>

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Запросы</title>
</head>
<body>
    <h2>Запросы</h2>
    @foreach (var item in Model)
    {
        <section>
            <p class="user">@item.UserName @item.Contact</p>
            <div class="request-container"><p>@item.Question</p> @Html.ActionLink("Удалить", "DeleteRequest", new { id = item.Id }, new { @class = "delete-request-link" })</div>
        </section>
    }
    @Styles.Render("~/Content/css")
</body>
</html>

    
